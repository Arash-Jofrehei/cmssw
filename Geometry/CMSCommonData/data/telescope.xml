<?xml version="1.0"?>

<DDDefinition xmlns="http://www.cern.ch/cms/DDL" xmlns:xsi="http://www.cern.ch/www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.cern.ch/cms/DDL ../../../DetectorDescription/Schema/DDLSchema.xsd">


<!--
<MaterialSection label="telescope.xml">
</MaterialSection>
-->


<LogicalPartSection label="telescope.xml">
<LogicalPart name="Arm" category="unspecified">
<rSolid name="telescope:Arm"/>
<rMaterial name="materials:Air"/>
</LogicalPart>
<LogicalPart name="Plane" category="unspecified">
<rSolid name="telescope:Plane"/>
<rMaterial name="materials:Air"/>
</LogicalPart>
</LogicalPartSection>



<SolidSection label="telescope.xml">
<Box name="Arm" dx="160.0*mm" dy="260.0*mm" dz="85.0*mm"/>
<Box name="Plane" dx="[Phase2BeamTestConstants:Phase1BPIXModuleWidth]" dy="[Phase2BeamTestConstants:Phase1BPIXModuleLength]/2.0" dz="[Phase2BeamTestConstants:Phase1BPIXModuleThickness]/2.0"/>
</SolidSection>



<PosPartSection label="telescope.xml">

<PosPart copyNumber="1">
<rParent name="cms:OCMS"/>
<rChild name="telescope:Arm"/>
<Translation x="0.0*mm" y="0.0*mm" z="[Phase2BeamTestConstants:InterArmDeltaZ]/2.0"/>
</PosPart>
<PosPart copyNumber="2">
<rParent name="cms:OCMS"/>
<rChild name="telescope:Arm"/>
<Translation x="0.0*mm" y="0.0*mm" z="-[Phase2BeamTestConstants:InterArmDeltaZ]/2.0"/>
</PosPart>


<PosPart copyNumber="1">
<rParent name="telescope:Arm"/>
<rChild name="telescope:Plane"/>
<rRotation name="Phase2BeamTestConstants:PlaneSkew"/>
<Translation x="0.0*mm" y="0.0*mm" z="-3.0*[Phase2BeamTestConstants:InterPlaneDeltaZ]/2.0"/>
</PosPart>
<PosPart copyNumber="2">
<rParent name="telescope:Arm"/>
<rChild name="telescope:Plane"/>
<rRotation name="Phase2BeamTestConstants:PlaneSkew"/>
<Translation x="0.0*mm" y="0.0*mm" z="-1.0*[Phase2BeamTestConstants:InterPlaneDeltaZ]/2.0"/>
</PosPart>
<PosPart copyNumber="3">
<rParent name="telescope:Arm"/>
<rChild name="telescope:Plane"/>
<rRotation name="Phase2BeamTestConstants:PlaneSkew"/>
<Translation x="0.0*mm" y="0.0*mm" z="1.0*[Phase2BeamTestConstants:InterPlaneDeltaZ]/2.0"/>
</PosPart>
<PosPart copyNumber="4">
<rParent name="telescope:Arm"/>
<rChild name="telescope:Plane"/>
<rRotation name="Phase2BeamTestConstants:PlaneSkew"/>
<Translation x="0.0*mm" y="0.0*mm" z="3.0*[Phase2BeamTestConstants:InterPlaneDeltaZ]/2.0"/>
</PosPart>


<PosPart copyNumber="1">
<rParent name="telescope:Plane"/>
<rChild name="DUT:BModule1Layer6"/>
<Translation x="-[Phase2BeamTestConstants:Phase1BPIXModuleWidth]/2.0" y="0.0*mm" z="0.0*mm"/>
</PosPart>
<PosPart copyNumber="2">
<rParent name="telescope:Plane"/>
<rChild name="DUT:BModule1Layer6"/>
<Translation x="[Phase2BeamTestConstants:Phase1BPIXModuleWidth]/2.0" y="0.0*mm" z="0.0*mm"/>
</PosPart>


</PosPartSection>



</DDDefinition>



